<form {{action onSubmit on="submit"}}>
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-half">
        <div class="box">
          <div class="subtitle form-title" data-test-form-title>Find a client and generate voucher</div>
          <p class="form-description" data-test-form-desc>Type email or phone</p>

          <div class="columns">
            <div class="column">
              <div class="field">
                <label class="label">Email</label>
                <div class="control">
                  <input
                    class="input"
                    type="email"
                    placeholder="e.g. techtest@phorest.com"
                    data-test-email
                  >
                </div>
              </div>
            </div>
            <div class="column">
              <div class="field">
                <label class="label">Phone</label>
                <div class="control">
                  <input
                    class="input"
                    type="text"
                    placeholder="e.g. 888888855599222"
                    data-test-phone
                  >
                </div>
              </div>
            </div>
          </div>

          <div class="field is-grouped is-grouped-right">
            <p class="control">
              <button class="button is-primary">
                Search
              </button>
            </p>
          </div>

        </div>
      </div>
    </div>
  </div>
</form>
